<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row">
    <div class="col-sm-10">
        <div class="card" style="background-color:#ffe5d0;">
        <div class="card-body">
            <div style="background-color: #fd9843;">
                <h3 class="card-title">{{post.title}}</h3>            
                <h5 class="card-subtitle mb-2">
                    <a href="/users/{{user.id}}">{{post.user.username}}</a>
                </h5>
            </div>
            <div>
                <p class="card-text">{{post.content}}</p>
                <a href="#" class="card-link">Comments</a>
            </div>
        </div>
    </div>
</div>
{{/each}}