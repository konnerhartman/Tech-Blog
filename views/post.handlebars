<div class="row">
    <div class="col-sm-10">
        <div class="card" style="background-color:#ffe5d0;">
        <div class="card-body">
            <div style="background-color: #fd9843;">
                <h3 class="card-title">{{title}}</h3>            
                <h5 class="card-subtitle mb-2">
                    Written by: <a href="/users/{{id}}">{{user.username}}</a>
                </h5>
            </div>
            <div>
                <p class="card-text">{{content}}</p>
                <a href="#" class="card-link">Comment</a>
                <div>
                    <h5>
                        COMMENTS
                    </h5>
                    </br>
                    {{> comments post.comments}}
                </div>
            </div>
        </div>
    </div>
</div>