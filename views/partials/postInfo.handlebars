<div class="row">
    <div class="col-sm-10">
        <div class="card" style="background-color:#ffe5d0;">
        <div class="card-body">
            <div class="card rounded" style="background-color: #fd9843;">
                <h3 class="card-title">
                    <a href="/post/{{id}}">{{title}}</a>
                </h3>            
                <p class="card-subtitle mb-2">
                    Writen By: {{user.username}} on {{format_date date_created}}
                </p>
            </div>
            <div class="card rounded" style="background-color: #ffab66;">
                <p class="card-text">{{content}}</p>
            </div>
        </div>
    </div>
</div>