<div class="row">
    <div class="col-sm-10">
        <div class="card" style="background-color:#ffe5d0;">
        <div class="card-body">
            <div style="background-color: #fd9843;">
                <h3 class="card-title">
                    <a href="/post/{{id}}">{{title}}</a>
                </h3>            
                <h5 class="card-subtitle mb-2">
                    Wrriten By: <a href="/users/{{user.id}}">{{user.username}}</a> on {{format_date date_created}}
                </h5>
            </div>
            <div>
                <p class="card-text">{{content}}</p>
            </div>
        </div>
    </div>
</div>